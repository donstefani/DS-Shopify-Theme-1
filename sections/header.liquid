<!-- HEADER-TEST-123 -->
<header class="header">
  <div id="header-container" class="header__container">
    <div class="header__row">
      <div class="header__branding">
        <h2 class="header__title">
          {{ shop.name | link_to: routes.root_url }}
        </h2>
        <p class="header__tagline">Complete end-to-end Shopify development</p>
      </div>
      <form action="{{ routes.search_url }}" method="get" role="search" class="header__search-form">
        <input type="search" name="q" class="header__search-input" placeholder="Search..." />
        <button type="submit" style="display:none;">Search</button>
      </form>
    </div>
    <div id="menu-container">
      <div class="mega-menu-bar">
        <div id="menu-wrapper" class="mega-menu-wrapper">
          <div class="container">
            <nav id="mega-menu" class="mega-menu"></nav>
          </div>
        </div>
        <div id="mega-menu-panel" class="mega-menu-panel" style="display:none;"></div>
      </div>
    </div>
  </div>
</header>

<script>
document.addEventListener('DOMContentLoaded', function() {
  function isDesktop() {
    return window.innerWidth > 800;
  }

  fetch('{{ "mega-menu.json" | asset_url }}')
    .then(response => response.json())
    .then(function(menuItems) {
      var nav     = document.getElementById('mega-menu'),
          panel   = document.getElementById('mega-menu-panel'),
          wrapper = document.getElementById('menu-wrapper');

      if (!nav || !panel || !wrapper) {
        return;
      }

    // Ensure panel starts hidden (no visible class)
    // Panel starts hidden by default CSS

    // Build menu links
    var linksHtml = menuItems.map(function(item, idx) {
      return `<a href="/collections/${item.handle}"
             class="mega-menu__item"
             title="${item.title}"
             data-menu-idx="${idx}"
             tabindex="0">
             ${item.title}
             </a>`;
    }).join('');
    nav.innerHTML = linksHtml;

    function showPanel(idx) {
      var item = menuItems[idx];
      if (!item || !item.products) {
        return;
      }

      // Left side: products grid
      var productsHtml = item.products.map(function(prod) {
        return `<a href="/products/${prod.handle}" class="mega-menu-panel__product">
               <img src="${prod.image}"
                    alt="${prod.title}"
                    class="mega-menu-panel__img"/>
               <span class="mega-menu-panel__title">${prod.title}</span>
               </a>`;
      }).join('');

      // Compose panel HTML
      var panelHtml = `<div class="mega-menu-panel__left">
                      <div class="mega-menu-panel__left-inner">
                        <div class="mega-menu-panel__products">
                          ${productsHtml}
                        </div>
                      </div>
                    </div>
                    <div class="mega-menu-panel__right">
                      <div class="mega-menu-panel__desc">
                        <p class="mega-menu-panel__collection_title">
                          ${item.title || ''}
                        </p>
                        <div class="mega-menu-panel__collection_description">
                          ${item.body_html || ''}
                        </div>
                      </div>
                    </div>`;

      // Inject & style panel
      panel.innerHTML = panelHtml;
      panel.style.display = 'flex';
      panel.classList.add('mega-menu-panel--visible');
      
      // Position the panel below the menu items
      var menuBar = document.querySelector('.mega-menu-bar');
      var menuBarRect = menuBar.getBoundingClientRect();
      var menuBarBottom = menuBarRect.top + menuBar.offsetHeight;
      var panelTop = menuBarBottom + 2; // Small 2px gap below menu items
      panel.style.top = panelTop + 'px';
    }

    function hidePanel() {
      panel.classList.remove('mega-menu-panel--visible');
    }

    // Desktop: hover to show/hide
    nav.addEventListener('mouseover', function(e) {
      if (!isDesktop()) return;
      if (e.target.classList.contains('mega-menu__item')) {
        var idx = parseInt(e.target.dataset.menuIdx);
        document.querySelectorAll('.mega-menu__item').forEach(function(item) {
          item.classList.remove('hover');
        });
        e.target.classList.add('hover');
        showPanel(idx);
      }
    });

    // Handle mouse out events on menu container
    document.getElementById('menu-container').addEventListener('mouseout', function(e) {
      if (!isDesktop()) return;
      
      // Check if the mouse is leaving the menu container
      var relatedTarget = e.relatedTarget;
      if (!relatedTarget || !relatedTarget.closest('#menu-container')) {
        hidePanel();
        // Clear any lingering hover states
        document.querySelectorAll('.mega-menu__item').forEach(function(item) {
          item.classList.remove('hover');
        });
      }
    });

    // Also handle mouse out on the panel itself
    document.addEventListener('mouseout', function(e) {
      if (!isDesktop()) return;
      if (e.target.id === 'mega-menu-panel') {
        var relatedTarget = e.relatedTarget;
        if (!relatedTarget || !relatedTarget.closest('#menu-container')) {
          hidePanel();
          document.querySelectorAll('.mega-menu__item').forEach(function(item) {
            item.classList.remove('hover');
          });
        }
      }
    });



    // Mobile: click to toggle
    nav.addEventListener('click', function(e) {
      if (isDesktop()) return;
      if (e.target.classList.contains('mega-menu__item')) {
        e.preventDefault();
        var idx = e.target.dataset.menuIdx;
        if (panel.style.display !== 'none' && panel.dataset.openIdx === idx) {
          hidePanel();
          delete panel.dataset.openIdx;
        } else {
          showPanel(idx);
          panel.dataset.openIdx = idx;
        }
      }
    });

    // Always hide on resize
    window.addEventListener('resize', hidePanel);
    });
  });
</script>


