<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'output.css' | asset_url | stylesheet_tag }}
    {{ 'tagline.css' | asset_url | stylesheet_tag }}
    {{ 'mega-menu.css' | asset_url | stylesheet_tag }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% section 'top-bar' %}
    {% sections 'header-group' %}

    <div class="content-wrapper" style="margin-top: 45px;">
      {{ content_for_layout }}
    </div>

    {% sections 'footer-group' %}
  </body>
</html>
