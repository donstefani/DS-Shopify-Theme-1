<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'tagline.css' | asset_url | stylesheet_tag }}
    {{ 'mega-menu.css' | asset_url | stylesheet_tag }}
    {% # Load jQuery %}
    <script src="{{ 'jquery-3.7.1.min.js' | asset_url }}"></script>

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% section 'top-bar' %}
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
